{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    <h1>{{ slug }}</h1>

        <div>
            <h2>{{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
        <strong>Tags :</strong>
        <ul>
            {% for tag in article.tags %}
                <li>{{ tag.name }} </li>
            {% else %}
                <li>No tags for this article</li>
            {% endfor %}
        </ul>
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>
{% endblock %}